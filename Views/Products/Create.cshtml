@model Prog_Farm_Stall_MVC_Final.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

@*<h4>Product</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductFarmerName" class="control-label">Full Name</label>
                <input asp-for="ProductFarmerName" class="form-control" autocomplete="off" placeholder="ex: Abigail Peters"/>
                <span asp-validation-for="ProductFarmerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"> Product Name</label>
                <input asp-for="ProductName" class="form-control" autocomplete="off" placeholder="ex: Clover Milk"/>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label">Description</label>
                <input asp-for="ProductDescription" class="form-control" autocomplete="off" placeholder="ex: 1 litre Milk"/>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
